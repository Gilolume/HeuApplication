<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guill.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_recording"
        android:onClick="startAnalyze"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.49" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="187dp"
        android:layout_height="267dp"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        android:layout_marginTop="13dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.048" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="356dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="LabelFor,MissingConstraints" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="110dp"
        android:layout_height="56dp"
        android:text="@string/record"
        android:onClick="startRecording"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewResult"
        android:layout_marginRight="137dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/onomatopoeiaTextView"
        android:layout_width="151dp"
        android:layout_height="266dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewResult"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textViewResult"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.619"
        tools:layout_editor_absoluteY="143dp" />

</android.support.constraint.ConstraintLayout>
