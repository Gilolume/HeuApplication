<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guill.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="181dp"
        android:layout_height="299dp"
        android:text=""
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recordButton" />

    <TextView
        android:id="@+id/onomatopoeiaTextView"
        android:layout_width="161dp"
        android:layout_height="297dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewResult"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textViewResult"
        android:layout_marginBottom="-74dp"
        app:layout_constraintHorizontal_bias="0.272"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/synonymeTextView"
        android:layout_width="368dp"
        android:layout_height="447dp"
        android:text="@string/synonymeTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/synonymeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_synonymes"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/synonymeTextView"
        android:onClick="synonymePressed"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:text="@string/recordButton"
        app:layout_constraintTop_toTopOf="@+id/synonymeTextView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.002"
        android:onClick="manageRecord"
        />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="61dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintRight_toLeftOf="@+id/recordButton"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteX="24dp" />

</android.support.constraint.ConstraintLayout>
