<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guill.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="181dp"
        android:layout_height="299dp"
        android:text=""
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toTopOf="@+id/lottieAnimationView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/onomatopoeiaTextView"
        android:layout_width="161dp"
        android:layout_height="297dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewResult"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textViewResult"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/lottieAnimationView"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/synonymeTextView"
        android:layout_width="368dp"
        android:layout_height="447dp"
        android:text="@string/synonymeTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/synonymeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_synonymes"
        app:layout_constraintTop_toBottomOf="@+id/synonymeTextView"
        android:onClick="synonymePressed"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="61dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="29dp"
        tools:ignore="MissingConstraints,RtlHardcoded" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="191dp"
        android:layout_height="155dp"
        android:layout_alignParentEnd="true"
        app:lottie_fileName="voice_animotion/data.json"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:onClick="manageRecord"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
